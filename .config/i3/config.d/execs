# i3 config
# Autostart commands

# Start polkit-gnome-authentication-agent-1
exec --no-startup-id /usr/lib/policykit-1-gnome/polkit-gnome-authentication-agent-1

# Monitor Settings
exec_always xrandr --output Virtual-1 --mode 1920x1440

# Wallpaper
exec_always ~/.config/i3/scripts.d/wallpaper.sh

# Polybar
exec_always ~/.config/i3/scripts.d/polybar_startup.sh

# xfce4-power-manager:
exec --no-startup-id /usr/bin/xfce4-power-manager

# Fibonacci layout:
exec_always --no-startup-id ~/.config/i3/scripts.d/alternating_layouts.py
